@using Maxim.Models;
@model List<Service>
@{
    int count = 0;
}
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">Service</th>
            <th scope="col">Id</th>
            <th scope="col">Icon</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col" width="200px"><div><a class="btn btn-primary" style="margin-left:25px;" asp-controller="Service" asp-action="Create">Create</a></div></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th scope="row">@count</th>
                <td>@item.Id</td>
                <td><div class="icon-box icon-box-pink">@Html.Raw(item.Icon)</div></td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-danger " asp-controller="Service" asp-action="Delete" asp-route-id="@item.Id">Delete </a>
                    <a class="btn btn-warning " asp-controller="Service" asp-action="Update" asp-route-id="@item.Id">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>

